  <div class="container mt-4 mb-4">
    <div class="card mx-auto col-lg-6 shadow p-3 mb-5 bg-white rounded">
        <h2>ログイン</h2>
          <%= form_with model: @user, url: user_session_path do |f| %>
            <div class="ml-3 mt-3">
            <div class="row mt-3">
              <div class="col-md-4">
                <%= f.label "名前：" %>
              </div>
              <div class="col-4">
                <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-md-4">
                <%= f.label "パスワード：" %>
              </div>
              <div class="col-4">
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>
            </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <div class="text-center mt-3">
                <%= f.submit "ログイン", class: "btn_size btn_blue" %>
              </div>
          <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>