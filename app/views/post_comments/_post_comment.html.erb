  <!--コメント一覧部分テンプレート-->
  <p>コメント件数：<%= post.post_comments.count %></p>
    <% post.post_comments.each do |post_comment| %>
      <%= image_tag post_comment.user.get_profile_image, size: "30x30" %>
      <%= post_comment.user.name %>
      <%= post_comment.comment %>
      <% if post_comment.user == current_user %>
        <%= link_to "削除", post_post_comment_path(post_comment.post,post_comment), remote: true, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %>
      <% end %>
    <% end %>
