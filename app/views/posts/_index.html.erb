  <div class="row mx-auto">
    <% posts.each do |post| %>
      <div class="col-3 mt-2">
        <div class="card-wrap">
          <div class="card-header d-flex pt-1 pl-1 pb-1">
            <% if post.photo.attached? %>
            <%= link_to post.user do %>
            <%= image_tag post.user.get_profile_image, size: "30x30", class: "icon" %>
            <%= post.user.name %><br>
            <% end %>
          </div>
            <%= link_to post_path(post.id) do %>
            <%= image_tag post.photo, size: "250x200" %>
            <% end %>
            <% end %>
          <div class="card-body pt-1 pl-1 pb-1 bg-white">
            <p class="mb-1 font-weight-bold"><%= post.title %></p>
            <!--<div class="row">-->
              難易度:
              <span class="ml-2" id="star-rate<%= post.id %>"></span>
                <script>
                  $('#star-rate<%= post.id%>').raty({
                    size      : 10,
                    starOff   : '<%= asset_path('star-off.png') %>',
                    starOn    : '<%= asset_path('star-on.png') %>',
                    half      : false,
                    readOnly: true,
                    score: <%= post.difficulty %>,
                  });
                </script>
            <!--</div>-->
          </div>
        </div>
      </div>
    <% end %>
  </div>