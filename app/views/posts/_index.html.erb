  <div class="container mt-4 mb-4">
    <div class="row mx-auto">
      <% posts.each do |post| %>
        <div class="col-md-3 mt-2">
          <div class="card-wrap Small shadow">
            <div class="card-header d-flex pt-1 pl-1 pb-1">
              <% if post.photo.attached? %>
              <%= link_to post.user do %>
              <%= image_tag post.user.get_profile_image, class: "icon_small" %>
              <%= post.user.name %><br>
              <% end %>
            </div>
              <%= link_to post_path(post.id) do %>
              <%= image_tag post.photo, class: "image_hover post_image" %>
              <% end %>
              <% end %>
            <div class="card-body pt-1 pl-1 pb-1 bg-white border">

              <p class="mb-1 font-weight-bold"><%= post.title %></p>

                難易度:
                <span class="ml-2" id="star-rate<%= post.id %>"></span>
                  <script>
                    $('#star-rate<%= post.id%>').raty({
                      size      : 10,
                      starOff   : '<%= asset_path('star-off.png') %>',
                      starOn    : '<%= asset_path('star-on.png') %>',
                      half      : false,
                      readOnly: true,
                      score: '<%= post.difficulty %>',
                    });
                  </script>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>