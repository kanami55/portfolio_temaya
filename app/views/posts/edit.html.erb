  　<div class="card mx-auto col-7 shadow p-3 mb-5 bg-white rounded">
      <div class="col-6 mt-3 row">
        <h2>投稿編集</h2>
          <%= form_with model: @post, method: :patch do |f| %>
          <div class="field mt-2">
          <%= f.label "画像" %>
          <%= f.file_field :photo, accept: "image/*" %><br>
          </div>
          <div class="field mt-2">
          <%= f.label "タイトル" %>
          <%= f.text_field :title %><br>
          </div>
          <div class="field mt-2">
          <%= f.label "製作期間" %>
          <%= f.text_field :production_period %><br>
          </div>
          <div class="field mt-2">
          <%= f.label "製作費用" %>
          <%= f.text_field :cost %><br>
          </div>
          <div class="field mt-2">
          <%= f.label "説明" %>
          <%= f.text_area :explanation %><br>
          </div>
          <div class="field action mt-2">
          <%= f.submit  "更新", class: "btn btn-sm btn-info" %>
          </div>
          <% end %>
      </div>
    </div>
