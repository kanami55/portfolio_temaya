  <div class="container mt-4">
    <div class="col-6 mx-auto">
      <div class="row">
        <% users.each do |user| %>
        <div class="col-3">
          <%= image_tag user.get_profile_image, class: "icon_large" %>
        </div>
        <div class="col-3">
          <%= user.name %>
        </div>
        <div class="col-3">
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn_follow" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn_follow" %>
            <% end %>
          <% end %>
          <%= link_to '戻る', user_path(user.id)%>
        </div>
        <% end %>
      </div>
    </div>
  </div>