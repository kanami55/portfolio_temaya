    <div class="col-md-6 mx-auto mt-4">
      <% users.each do |user| %>
        <table class="table">
          <tbody>
            <tr>
              <td style="width: 20%">
                <%= link_to user_path(user.id) do %>
                  <%= image_tag user.get_profile_image, class: "icon_large" %>
                <% end %>
              </td>
              <td class="name_font" style="width: 20%">
                <%= link_to user_path(user.id) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td style="width: 60%" class="pr-0">
                <div id="follow_form">
                  <% if current_user != user %>
                    <% if current_user.following?(user) %>
                      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn_follow" %>
                    <% else %>
                      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn_follow" %>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
