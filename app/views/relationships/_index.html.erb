  <table class="table table-borderless table-sm" style="width: 600px">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
          <td>
            <% if current_user != user %>
              <% if current_user.following?(user) %>
                <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn_follow" %>
            <% else %>
                <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn_follow" %>
              <% end %>
            <% end %>
          </td>
          <td><%= link_to '戻る', user_path(user.id)%></td>
        </tr>
      <% end %>
    </tbody>
  </table>