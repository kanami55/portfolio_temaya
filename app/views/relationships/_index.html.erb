    <div class="container mt-4">
      <div class="col-6 mx-auto">
        <% users.each do |user| %>
          <table class="table" >
            <tbody>
              <tr>
                <td><%= image_tag user.get_profile_image, class: "icon_large" %></td>
                <td class="name_font"><%= user.name %></td>
                <td>
                <td>
                  <% if current_user != user %>
                    <% if current_user.following?(user) %>
                      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn_follow" %>
                    <% else %>
                      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn_follow" %>
                    <% end %>
                  <% end %>
                </td>
                <td>
                  <%= link_to '戻る→', user_path(user.id), class: "text-info font-weight-bold" %>
                </td>
              </tr>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>

