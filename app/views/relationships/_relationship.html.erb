<div>
  <%= link_to following_users.count, follows_user_path(user), class: "ml-3" %>
    <p class="mr-2 mb-0">フォロー</p>
</div>
<div>
  <%= link_to follower_users.count, followers_user_path(user), class: "ml-3" %>
    <p>フォロワー</p>
</div>

<div class="ml-auto">
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn_follow" %>
  <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn_follow" %>
    <% end %>
  <% end %>
</div>
