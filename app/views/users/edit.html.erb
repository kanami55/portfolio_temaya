　  <div class="card mx-auto col-10 shadow p-3 mb-5 bg-white rounded">
        <p><strong>プロフィール編集</strong></p>
        <%= form_with model: @user, method: :patch do |f| %>
        <div class="row d-flex justify-content-start">
        　<div class="col-5 mt-2">
            <%= f.label "プロフィール画像" %>
          </div>
          <div class="col-5 mt-2">
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="col-5 mt-2">
            <%= f.label "ユーザ名" %>
          </div>
          <div class="col-5 mt-2">
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>
          <div class="col-5 mt-2">
            <%= f.label "メールアドレス" %>
          </div>
          <div class="col-5 mt-2">
            <%= f.email_field :email, autocomplete: "email" %>
          </div>
          <div class="col-5 mt-2">
            <%= f.label "自己紹介" %>
          </div>
          <div class="col-5 mt-2">
            <%= f.text_area :introduction %>
          </div>
          <div class="col-5 mt-2">
            <%= f.label "パスワード" %> <i>(変更しない場合は空白にして下さい。)</i>
          </div>
          <div class="col-5 mt-2">
            <%= f.password_field :password, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %>文字以上</em>
            <% end %>
          </div>
          <div class="col-5 mt-2">
            <%= f.label "確認パスワード" %>
          </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="col-5 mt-2">
            <%= f.label "現在のパスワード" %> <i>(現在のパスワードが必要です。)</i>
          </div>
          <div class="col-5 mt-2">
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>
          <div class="action">
            <%= f.submit "更新", class: "btn btn-sm btn-info"%>
          </div>
        <% end %>
      </div>
    </div>
