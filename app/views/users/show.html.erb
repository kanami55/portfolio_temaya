  <div>
    <%= image_tag @user.get_profile_image, size: "50x50", class: "icon" %>
    <%= @user.name %>
    <%= render "relationships/relationship", user: @user, users: @user, following_users: @following_users, follower_users: @follower_users %>
      <% if @user == current_user %>
        <%= link_to "プロフィール編集", edit_user_path, class: "btn_size btn_green" %>
      <% end %>
  </div>

  <div class="row mx-auto">
    <% @posts.each do |post| %>
    <div class="col-3 mt-5">
      <div class="card-wrap">
      <% if post.photo.attached? %>
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.photo, size: "250x200" %>
        <% end %>
      <% end %>
      <div class="card-body pt-1 pl-1 pb-1 bg-white">
        <p class="mb-1 font-weight-bold"><%= post.title %></p>
        <%= post.created_at.strftime('%Y/%m/%d') %>
      </div>
      </div>
    </div>
    <% end %>
  </div>






