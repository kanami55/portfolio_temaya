  <div class="row">
    <div class="mr-2">
      <%= image_tag @user.get_profile_image, class: "icon" %><br>
      <%= @user.name %>
    </div>
      <%= render "relationships/relationship", user: @user, users: @user, following_users: @following_users, follower_users: @follower_users %>
    <div class="ml-auto">
      <% if @user == current_user %>
        <%= link_to "プロフィール編集", edit_user_path, class: "btn_size btn_green" %>
      <% end %>
    </div>
  </div>
    <div>プロフィール :<br>
      <%= @user.introduction %>
    </div>

  <div class="row mx-auto">
    <% @posts.each do |post| %>
    <div class="col-3 mt-5">
      <div class="card-wrap">
      <% if post.photo.attached? %>
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.photo, size: "247x200" %>
        <% end %>
      <% end %>
      <div class="card-body pt-1 pl-1 pb-1 bg-white">
        <!--非同期通信いいね機能-->
            <div id="like_btn_<%= post.id %>">
              <%= render "likes/like", post: post %>
            </div>
        <p class="mb-1 font-weight-bold"><%= post.title %></p>
        <p class="text-right m-0"><%= post.created_at.strftime('%Y/%m/%d') %></p>
      </div>
      </div>
    </div>
    <% end %>
  </div>






