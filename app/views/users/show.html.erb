  <div class="container mt-4">
    <div class="row">
      <div class="mr-2">
        <%= image_tag @user.get_profile_image, class: "icon_medium" %><br>
        <p class="name_font"><%= @user.name%></p>
      </div>
        <%= render "relationships/relationship", user: @user, users: @user, following_users: @following_users, follower_users: @follower_users %>
      <div class="ml-auto">
        <% if @user == current_user %>
          <%= link_to  edit_user_path do %>
            <i class="fas fa-user-cog fa-2x"></i>
          <% end %>
        <% end %>
      </div>
    </div>
      <div style="width: 500px">プロフィール :<br>
        <%= @user.introduction %>
      </div>

    <div class="row mx-auto">
      <% @posts.each do |post| %>
      <div class="col-3 mt-5">
        <div class="card-wrap shadow">
        <% if post.photo.attached? %>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.photo, size: "247x200" %>
          <% end %>
        <% end %>
        <div class="card-body pt-1 pl-1 pb-1 bg-white border">
          <!--非同期通信いいね機能-->
              <div id="like_btn_<%= post.id %>">
                <%= render "likes/like", post: post %>
              </div>
          <p class="font-weight-bold m-0"><%= post.title %></p>
          <p class="text-right m-0"><%= post.created_at.strftime('%Y/%m/%d') %></p>
        </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>





